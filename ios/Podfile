# Uncomment this line to define a global platform for your project
platform :ios, '16.6'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Disable the new CocoaPods Xcode integration that causes -G flag issues
# This flag was introduced in CocoaPods 1.13+ and causes linker errors
ENV['COCOAPODS_DISABLE_DETERMINISTIC_UUIDS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  # Fix BoringSSL-GRPC -G flag issue (Xcode 16 compatibility)
  # The -GCC_WARN_INHIBIT_ALL_WARNINGS flag is misread as -G by Xcode 16's clang
  # This removes the problematic flag from BoringSSL-GRPC source files
  installer.pods_project.targets.each do |target|
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Fix CocoaPods "-G" option incompatibility
    # This error occurs when a target's deployment target doesn't support the -G flag
    target.build_configurations.each do |config|
      # Disable -G flag generation
      config.build_settings['COCOAPODS_DISABLE_DETERMINISTIC_UUIDS'] = 'YES'

      # Ensure minimum iOS deployment target
      deployment_target = config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
      if deployment_target && deployment_target.to_f < 14.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      end

      # Force strip -G from build settings if it appears
      %w[OTHER_LDFLAGS GCC_PREPROCESSOR_DEFINITIONS].each do |key|
        value = config.build_settings[key]
        next unless value

        if value.is_a?(String)
          # Remove -G flag and arguments
          config.build_settings[key] = value.gsub(/-G\s+\S*/, '').gsub(/\s+/, ' ').strip
        elsif value.is_a?(Array)
          config.build_settings[key] = value.reject { |v| v.to_s.start_with?('-G') }
        end
      end
    end
  end

  # Fix Swift 6 compatibility issues in Firebase pods
  base_dir = File.dirname(__FILE__)

  # Patch all Firebase Swift files to remove Swift 6 syntax
  ['FirebaseSharedSwift', 'FirebaseCoreInternal'].each do |pod_name|
    pod_dir = File.join(base_dir, "Pods/#{pod_name}")
    if File.exist?(pod_dir)
      Dir.glob(File.join(pod_dir, "**/*.swift")).each do |swift_file|
        begin
          File.chmod(0644, swift_file) rescue nil
          content = File.read(swift_file)
          original_content = content.dup

          # Remove all Swift 6 concurrency keywords (but not from import statements)
          # Match keywords only when NOT part of "import" statements
          content.gsub!(/(?<!import\s)\bconsuming\s+/, '')
          content.gsub!(/(?<!import\s)\bborrowing\s+/, '')
          content.gsub!(/(?<!import\s)\bsending\s+/, '')
          content.gsub!(/(?<!import\s)\bnonisolated\(unsafe\)\s+/, '')
          content.gsub!(/(?<!import\s)\bnonisolated\s+/, '')
          content.gsub!(/\bunsafe_Sendable/, 'Sendable')

          # Only write if content changed
          File.write(swift_file, content) if content != original_content
        rescue => e
          # Silently skip files that can't be fixed
        end
      end
      puts "Patched all Swift files in #{pod_name} for Swift 5.9 compatibility"
    end
  end
end
